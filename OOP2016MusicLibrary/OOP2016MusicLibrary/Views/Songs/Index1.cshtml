@model IEnumerable<OOP2016MusicLibrary.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Songs</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id2 = ViewBag.id2 })
</p>
<table class="table">
    <tr>
        <th>
            Playlist name
        </th>
        <th>
            Song name
        </th>
        <th>
            Artist
        </th>
        <th>
           File name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Playlist.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.songName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.artist)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.fileSrc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id, id2 = ViewBag.id2 }) |
                @Html.ActionLink("Details", "Details", new { id = item.id, id2 = ViewBag.id2 }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id, id2 = ViewBag.id2 })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Playlist", "Index", "Playlists")
</div>